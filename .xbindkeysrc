# Examples of commands:

"xbindkeys_show"
  control+shift + q

"xvkbd -xsendevent -text "\[Left]""
  shift+alt+h

"xvkbd -xsendevent -text "\[Right]""
  shift+alt+l

"xvkbd -xsendevent -text "\[Up]""
  shift+alt+k

"xvkbd -xsendevent -text "\[Down]""
  shift+alt+j

"xvkbd -xsendevent -text "\[Up]""
  control+shift+alt+k

"xvkbd -xsendevent -text "\[Down]""
  control+shift+alt+j

"xvkbd -xsendevent -text "\C\[Left]""
  control+shift+alt+h

"xvkbd -xsendevent -text "\C\[Right]""
  control+shift+alt+l

"sleep 0.1 && xdotool keyup alt+shift && xdotool keydown alt+shift"
  alt+shift+n
  #control+mod4+j

"xdotool keyup alt+shift"
  alt+shift+Escape

"gnome-terminal --geometry=1x1+1141+27 -- /bin/bash -i -c "source ~/.bashrc; tor $(xclip -selection c -o) &""
  alt+a

"if [ $( echo "show\nhide" | dmenu -b -p "show bottom panel" ) = "hide" ]; then gsettings set org.cinnamon panels-autohide "['1:true']"; else gsettings set org.cinnamon panels-autohide "['1:false']"; fi"
  mod4+q

"rofi -combi-modi window,drun -show combi -modi combi"
  mod4+w

