for_window [class="^.*"] border pixel 0
gaps inner 30
gaps outer 0
set $mod Mod4
floating_modifier $mod

exec_always --no-startup-id killall -9 sxhkd picom nm-applet redshift
exec_always --no-startup-id sleep 0.1; sxhkd
exec_always --no-startup-id sleep 0.1; picom
exec_always --no-startup-id sleep 0.1; nm-applet
exec_always --no-startup-id sleep 0.1; redshift
exec_always --no-startup-id sleep 0.1; wal -i ~/.config/wall.png
exec_always --no-startup-id sleep 0.1; wal -R
exec_always --no-startup-id sleep 0.1; sh $HOME/.config/polybar/launch.sh

bindsym $mod+e          layout default
bindsym $mod+Shift+e    layout toggle tabbed stacking

bindsym $mod+t		split toggle
bindsym $mod+shift+u  	focus parent

bindsym $mod+g      	gaps inner current set 0
bindsym $mod+shift+g  	gaps inner current set 30

set $ws1     "1"
set $ws2     "2"
set $ws3     "3"
set $ws4     "4"
set $ws5     "5"
set $ws6     "6"
set $ws7     "7"
set $ws8     "8"
set $ws9     "9"
set $ws10   "10"
