for_window [class="^.*"] border pixel 0
gaps inner 30
gaps outer 0
set $mod Mod4
floating_modifier $mod

# #---Starting External Scripts---# #
exec --no-startup-id wal -i ~/.config/wall.png >/dev/null
exec --no-startup-id wal -R
exec --no-startup-id compton
exec --no-startup-id redshift
exec --no-startup-id nm-applet

# Set Xresources colors:
set_from_resource $darkblack	color0  #000000
set_from_resource $black	    color8  #000000
set_from_resource $red		    color3  #dd0000
set_from_resource $white	    color15 #dddddd

client.focused $red $red $darkblack $red $red
client.focused_inactive $black $darkblack $red $black $black
client.unfocused #2C2C2C #2C2C2C #ffffff #2C2C2C

bar {
	font pango:DejaVu Sans Mono, FontAwesome 8
	colors {
			background $darkblack
			statusline $white
			focused_workspace  $red $red $darkblack
			inactive_workspace $darkblack $darkblack $white
	}
    tray_output eDP-1-1
	status_command /home/uygar/.bumblebee-status/bumblebee-status -d -m spotify gcalcli battery amixer datetime
	position top
	mode dock
	modifier None
}

# #---Basic Bindings---# #
bindsym $mod+Shift+space 	floating toggle
bindsym $mod+space		    focus mode_toggle

# #---Letter Key Bindings---# #
bindsym $mod+q			[con_id="__focused__"] kill
bindsym $mod+Shift+q	mode "$mode_system"

bindsym $mod+e          layout default
bindsym $mod+Shift+e    layout toggle tabbed stacking

bindsym $mod+r			bar mode toggle
bindsym $mod+Shift+r	floating toggle; sticky toggle

bindsym $mod+t			split toggle

bindsym --whole-window $mod+button2          exec --no-startup-id cd "$(readlink /proc/`xprop -root | grep ACTIVE_WINDOW\(WINDOW\) | awk '{print $NF}' | xargs xprop -id | grep _PID | awk '{print $NF}' | xargs pstree -p | head -2 | tail -1 | grep -o  '[0-9]*' | head -1`/cwd)" && xclip -o | xargs xdg-open

bindsym $mod+s 	        scratchpad show
bindsym $mod+Shift+s 	move scratchpad

bindsym $mod+f			fullscreen toggle

bindsym $mod+shift+n  	focus parent

# #---Workspace Bindings---# #
bindsym $mod+Tab		workspace back_and_forth

set $ws1     "1"
set $ws2     "2"
set $ws3     "3"
set $ws4     "4"
set $ws5     "5"
set $ws6     "6"
set $ws7     "7"
set $ws8     "8"
set $ws9     "9"
set $ws10   "10"

for_window [title="^gcaladd$"]                  floating enable, resize set 625 400, border pixel 3
for_window [title="^note$"]                     floating enable, resize set 625 400, border pixel 3
for_window [title="^tmux$"]                     floating enable, resize set 720 480, move position center, sticky enable
for_window [title="feh.*uk-kbd-layout.png$"]    floating enable, resize set 557 195, move position 0 0 
for_window [title=".*WhatsApp$" class="^Surf$"]  floating enable

bindsym $mod+F2		restart
bindsym $mod+F3	    exec --no-startup-id  pkill -9 compton || compton

bindsym Print 		exec --no-startup-id "flameshot gui"

# #---Extra XF86 Keys---# #
bindsym XF86AudioMute		exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioLowerVolume	exec --no-startup-id amixer set 'Master' 10%-
bindsym XF86AudioRaiseVolume	exec --no-startup-id amixer set 'Master' 10%+
bindsym XF86Calculator		exec urxvt -e R -q
bindsym XF86AudioNext		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next 
bindsym XF86AudioPlay		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioPrev		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous 
bindsym XF86TouchpadToggle exec ~/.scripts/touchpad_toggle
bindsym XF86MonBrightnessDown	exec --no-startup-id brightnessctl set 10%-
bindsym XF86MonBrightnessUp	exec --no-startup-id brightnessctl set 10%+

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l exec bash ~/.scripts/lockscreen, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
