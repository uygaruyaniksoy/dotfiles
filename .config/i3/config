for_window [class="^.*"] border pixel 1
gaps inner 10
gaps outer 0
set $mod Mod4
floating_modifier $mod

# #---Starting External Scripts---# #
exec --no-startup-id wal -i ~/.config/wall.png >/dev/null
exec --no-startup-id wal -R
exec --no-startup-id compton
exec --no-startup-id redshift
exec --no-startup-id steam
exec --no-startup-id nm-applet
exec --no-startup-id /usr/bin/setxkbmap -option "caps:escape"
exec --no-startup-id xset r rate 200 40

# Set Xresources colors:
set_from_resource $darkblack	color0  #000000
set_from_resource $black	    color8  #000000
set_from_resource $red		    color3  #dd0000
set_from_resource $white	    color15 #dddddd

client.focused $red $red $darkblack $red $red
client.focused_inactive $black $darkblack $red $black $black
client.unfocused #2C2C2C #2C2C2C #ffffff #2C2C2C

bar {
	font pango:DejaVu Sans Mono, FontAwesome 8
	colors {
			background $darkblack
			statusline $white
			focused_workspace  $red $red $darkblack
			inactive_workspace $darkblack $darkblack $white
	}
    tray_output eDP-1-1
    tray_padding 0 
	status_command /home/uygar/.bumblebee-status/bumblebee-status -d -m spotify gcalcli battery amixer datetime
	position top
	mode dock
	modifier None
}

# #---Basic Bindings---# #
bindsym $mod+Return 		exec urxvt
bindsym $mod+Shift+space 	floating toggle
bindsym $mod+space		focus mode_toggle

# #---Letter Key Bindings---# #
bindsym $mod+h			focus left; 
bindsym $mod+j			focus down; 
bindsym $mod+k			focus up; 
bindsym $mod+l			focus right; 

bindsym $mod+Shift+h	move left 30
bindsym $mod+Shift+j	move down 30
bindsym $mod+Shift+k	move up 30
bindsym $mod+Shift+l	move right 30

bindsym $mod+q			[con_id="__focused__" instance="^(?!math|dropdown).*$"] kill

bindsym $mod+w			exec urxvt -e calcurse
bindsym $mod+Shift+w    exec feh ~/Pictures/uk-kbd-layout.png

bindsym $mod+e          layout default
bindsym $mod+Shift+e    layout toggle tabbed stacking

bindsym $mod+r          mode "$mode_resize"
bindsym $mod+Shift+r 	exec urxvt -e ranger

bindsym $mod+t			split toggle
bindsym $mod+Shift+t	exec urxvt -e sh -c "tmux attach || tmux new"

bindsym $mod+o			sticky toggle

bindsym $mod+u			focus parent

bindsym $mod+a			gaps outer current plus 5
bindsym $mod+Shift+a	gaps outer current minus 5

bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s	gaps inner current minus 5

bindsym $mod+d			exec --no-startup-id dmenu_run
bindsym $mod+Shift+d	gaps inner current set 0; gaps outer current set 0

bindsym $mod+f			fullscreen toggle
bindsym $mod+Shift+f	mode "$freeze"

bindsym $mod+b			bar mode toggle
bindsym $mod+Shift+b	floating toggle; sticky toggle

bindsym $mod+n			exec "rofi -combi-modi window,drun -show combi -modi combi -theme Pop-Dark"
bindsym $mod+Shift+n			exec urxvt -e ~/.scripts/.list_scripts.sh && exit

# #---Workspace Bindings---# #
bindsym $mod+Tab		workspace back_and_forth

set $ws1     "1"
set $ws2     "2"
set $ws3     "3"
set $ws4     "4"
set $ws5     "5"
set $ws6     "6"
set $ws7     "7"
set $ws8     "8"
set $ws9     "9"
set $ws10   "10"

bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

workspace 3 output DP-1-1

for_window [title="^Europa Universalis IV$"]    floating enable
for_window [title="^gcaladd$"]                  floating enable, resize set 625 400, border pixel 3
for_window [title="^note$"]                     floating enable, resize set 625 400, border pixel 3
for_window [title="^.list_scripts.sh$"]         floating enable, resize set 1 1, move to workspace $ws10 
for_window [title="^tmux$"]                     floating enable, resize set 720 480, move position center, sticky enable
for_window [title="feh.*uk-kbd-layout.png$"]    floating enable, resize set 557 195, move position 0 0 

bindsym $mod+F2		restart
bindsym $mod+F3	    exec --no-startup-id  compton
bindsym $mod+F4     mode "$mode_system"

bindsym Print 		exec --no-startup-id "flameshot gui"

# #---Extra XF86 Keys---# #
bindsym XF86AudioMute		exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioLowerVolume	exec --no-startup-id amixer set 'Master' 10%-
bindsym XF86AudioRaiseVolume	exec --no-startup-id amixer set 'Master' 10%+
bindsym XF86Calculator		exec urxvt -e R -q
bindsym XF86AudioNext		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next 
bindsym XF86AudioPlay		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioPrev		exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous 
bindsym XF86TouchpadToggle exec ~/.scripts/touchpad_toggle
bindsym XF86MonBrightnessDown	exec --no-startup-id brightnessctl set 10%-
bindsym XF86MonBrightnessUp	exec --no-startup-id brightnessctl set 10%+

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l exec bash ~/.scripts/lockscreen, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec bash -c "~/.scripts/lockscreen && systemctl suspend", mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_resize Resize
mode "$mode_resize" {
    bindsym h	    	resize shrink width 10 px or 10 ppt
    bindsym j	    	resize shrink height 10 px or 10 ppt
    bindsym k			resize grow   height 10 px or 10 ppt
    bindsym l	    	resize grow   width 10 px or 10 ppt
    bindsym $mod+h      focus left
    bindsym $mod+j      focus down
    bindsym $mod+k      focus up
    bindsym $mod+l      focus right

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $freeze Distraction-free mode (mod+shift+esc to exit)
mode "$freeze" { 
    bindsym $mod+Shift+Escape mode "default"
}
